@model Product

<div class="card position-relative">
    <a href="single-product.html"><img src="~/images/@Model.CoverImageUrl" class="img-fluid rounded-4" alt="image"></a>
    <div class="card-body p-0">
        <a asp-controller="product" asp-action="details" asp-route-id="@Model.Id">
            <h3 class="card-title pt-4 m-0">@Model.Name</h3>
        </a>

        <div class="card-text">
            <span class="rating secondary-font">
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                <iconify-icon icon="clarity:star-solid" class="text-primary"></iconify-icon>
                5.0
            </span>

            <h3 class="secondary-font text-primary">$@Model.Price</h3>

            <div class="d-flex flex-wrap mt-3">
                <a onclick="addToBasket(@Model.Id)" class="btn-cart me-3 px-4 pt-3 pb-3">
                    <h5 class="text-uppercase m-0">Add to Cart</h5>
                </a>
                <a onclick="addToWishlist(@Model.Id)" class="btn-wishlist px-4 pt-3 ">
                    <iconify-icon icon="fluent:heart-28-filled" class="fs-5"></iconify-icon>
                </a>
            </div>


        </div>

    </div>
</div>
